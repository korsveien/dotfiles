[user]
	name = peder
    useConfigOnly = true
	email = peder@korsveien.me
[includeIf "gitdir:~/digipost/"]
    path = ~/digipost/.gitconfig
[core]
    editor = nvim
    autocrlf = input
    sshCommand = ssh -i ~/.ssh/id_ed25519
    hooksPath = /Users/peder/.githooks
    excludesFile = ~/.gitignore
[commit]
    gpgsign = true
[color]
    ui = true
[format]
    pretty = format:%C(auto,yellow)%h %C(auto,blue)%>(12,trunc)%ad %C(auto,green)%<(14,trunc)%aN%C(auto,reset)%s%C(auto,red)% gD% D
[push]
    default = simple
[grep]
    extendRegexp = true
    lineNumber = true
[stash]
    showPatch = true
[rebase]
    autostash = true
[log]
    decorate = full
[pull]
    ff = only
[github]
    user = korsveien
[init]
    defaultBranch = main
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    features = calochortus-lyallii side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[diff]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
